{
  "manifest_version": 3,
  "name": "Claude Usage Pro",
  "version": "1.0.0",
  "description": "Track your Claude.ai token usage with embedded UI and detailed analytics",
  "author": "Nash Keller Media",
  
  "permissions": [
    "storage",
    "alarms",
    "tabs"
  ],
  
  "host_permissions": [
    "https://claude.ai/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": [
        "lib/tokenizer.js",
        "content/utils.js",
        "content/data-classes.js",
        "content/api-interceptor.js",
        "content/sidebar-ui.js",
        "content/chat-ui.js",
        "content/main.js"
      ],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Claude Usage Pro"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["styles/*.css", "injections/*.js"],
      "matches": ["https://claude.ai/*"]
    }
  ]
}
