{
  "manifest_version": 3,
  "name": "Claude Usage Pro",
  "version": "2.1.16",
  "description": "Track and visualize your Claude.ai usage with real-time stats, accurate token counting, voice input, and cross-device sync",
  "permissions": [
    "storage",
    "scripting",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/*"
      ],
      "css": [
        "content/styles.css"
      ],
      "js": [
        "lib/tokenizer.js",
        "content/utils.js",
        "content/api-interceptor.js",
        "content/usage-scraper.js",
        "content/sidebar-ui.js",
        "content/chat-ui.js",
        "content/voice-input.js",
        "content/main.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
