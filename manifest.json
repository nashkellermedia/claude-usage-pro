{
  "manifest_version": 3,
  "name": "Claude Usage Pro",
  "version": "0.1.1",
  "description": "Track your Claude.ai token usage, costs, and optimize your AI workflow with real-time analytics.",
  "author": "Nash Keller Media",
  
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  
  "host_permissions": [
    "https://claude.ai/*",
    "https://api.anthropic.com/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": [
        "lib/utils.js",
        "content/message-tracker.js",
        "content/content-script.js"
      ],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html"
  },
  
  "options_page": "options/options.html",
  
  "web_accessible_resources": [
    {
      "resources": [
        "content/ui-components/*.js",
        "styles/*.css"
      ],
      "matches": ["https://claude.ai/*"]
    }
  ]
}
